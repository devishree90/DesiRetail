<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eCommSite1"
        android:id="@+id/eCommSite1CheckBox"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Websites you want to sell products"
        android:id="@+id/textView4"
        android:layout_above="@+id/eCommSite1CheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="105dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eCommSite2"
        android:id="@+id/eCommSite2CheckBox"
        android:layout_below="@+id/eCommSite1CheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/registerSiteDoneButton"
        android:layout_below="@+id/eCommSite2CheckBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:onClick="goToReviewPage"/>
</RelativeLayout>
